<!doctype html>
<html ng-app="Login">
  <head>
    <link href="//cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="//cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.8.1/angular.min.js"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.2/css/xeditable.min.css" rel="stylesheet">
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.2/js/xeditable.min.js"></script>
   
    <link rel="stylesheet" href="assets/stylesheets/style.css">
    <!-- <script src="assets/javascripts/login.js"></script> -->
  </head>
  
<body ng-controller="LoginCtrl">
  <div class="container " >
    <div class="text-center">
        <h1>Login</h1>
      </div>
    <div id="login-form" class="row">
      <div class="text-center">
        <form method="POST" action="/login">
          <div class="mb-3">
            <label  class="form-label">Please fill your account:</label>
            <input type="email" name="email" class="form-control" placeholder="Email here!"></input>
            <input type="password" name="password" class="form-control" placeholder="Password here!" maxlength="8" size="18"></input>
          </div>
          <button type="submit" class="btn btn-success btn-lg"> Login </button>
        </form>
      </div>
    </div>
    <div >
      <% if(errorMessage) { %> 
      <label class="errorLabel"><%= errorMessage %></label>
      <% } %>
    </div>
  </div>
</body>

<html>