<!doctype html>
<html ng-app="myApp">
  <head>
    <link href="//cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="//cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.8.1/angular.min.js"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.2/css/xeditable.min.css" rel="stylesheet">
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.2/js/xeditable.min.js"></script>
   
    <link rel="stylesheet" href="assets/stylesheets/style.css">
    <script src="assets/javascripts/todo.js"></script>
  </head>
  
<body ng-controller="Ctrl">
  <div class="container " >
    <% include header %>
    <!-- <div class="text-center">
      <h1>{{appName}} <span class="badge bg-info text-light"> {{todos.length}} </span></h1>
    </div>
    </div> -->
    
    <div id="todo-list" class="row">
          <div class="checkbox" ng-repeat="todo in todos">
            <div class="myRow">
              <input type="checkbox" ng-model="todo.isDone" ng-change="updateTodo(todo)"> 
              <a href ng-click="deleteTodo(todo)"><i class="fa fa-remove"></i></a>
              <a href ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible" ><i class="fa fa-edit"></i></a>
              <span ng-class="{todoDone: todo.isDone}" 
                    editable-text="todo.text" 
                    e-form="textBtnForm"
                    onaftersave="updateTodo(todo)">{{ todo.text || 'empty' }}</span>
            </div>
          </div>
          <p class="text-center" ng-show="dataLoading">
            <span class="fa fa-spinner fa-spin fa-3x"></span>
          </p>
    </div>
    <div id="todo-form" class="row">
      <div class="text-center">
        <form>
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">What do you want to do?</label>
            <textarea ng-model="formData.text" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Your text here!"></textarea>
          </div>
          <button type="submit" ng-click="createTodo()" class="btn btn-success btn-lg"> Add </button>
        </form>
      </div>
    </div>
  </div>
</body>

<html>